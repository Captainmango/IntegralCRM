<div class="w3-main" style="margin-left:40px;margin-top:43px;">

  <!-- Header -->
  <header class="w3-container" style="padding-top:22px">
    <h5><b><i class="fa fa-dashboard"></i> Clients</b></h5>
    <form action="/clients/new" method="GET" class="w3-right">
    <button class="w3-button w3-green w3-padding-large w3-large w3-margin-top" type="submit">
    Create new Client
    </button>
    </form>
  </header>
<br>
<br>

<div class="w3-row-padding w3-responsive" style="overflow-x:auto">
    <table class="w3-hoverable">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Contact Number</th>
        <th>Email</th>
        <th>1st line of Address</th>
        <th>2nd line of Address</th>
        <th>City</th>
        <th>Additional Info</th>
    </tr>
        <%@clients.each do |client| %>
            <tr>
                <td><a href="/clients/<%=client.id%>"><%=client.id%></td>
                <td><%=client.name%></td>
                <td><%=client.contact_number%></td>
                <td><%=client.email%></td>
                <td><%=client.address1%></td>
                <td><%=client.address2%></td>
                <td><%=client.postcode%></td>
                <td><%=client.city%></td>
                <td><%=client.add_info%></td>             
            </tr>

        <%end%>
    </table>
    
</div>


  <!-- End page content -->