<div class="w3-main" style="margin-left:40px;margin-top:43px;">

  <!-- Header -->
  <header class="w3-container" style="padding-top:22px">
    <h5><b><i class="fa fa-folder"></i> My Cases</b></h5>
   
  </header>
<br>
<br>

<div class="w3-row-padding w3-responsive" style="overflow-y:auto">
    <div class="w3-twothird w3-padding">
    <table class="w3-table-all w3-hoverable w3-border">
    <thead>
        <th>Id</th>
        <th>Status</th>
        <th>Client</th>
        <th>Open Date</th>
        <th>Close Date</th>
        <th>Most Recent Note</th>

        
    </thead>
    <tbody>
        <%@cases.each do |kase| %>
            <tr>
                <td><%=kase.id%></td>
                <td><a href="/cases/<%=kase.id%>"><%=kase.status%></a></td>
                <td><a href="/clients/<%=kase.client.id%>"><%=kase.client.name%></a></td>
                <td><%=kase.open_date%></td>
                <td><%=kase.close_date%></td>
                <td><a href="/notes/<%=kase.notes.last.id%>"><%=kase.notes.last.title%></a></td>         
            </tr>

        <%end%>
    </tbody>
    </table>
    </div>
    
</div>
